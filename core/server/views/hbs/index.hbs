<head>
    {{> head}}
    <link href="../themes/css/login.css" rel="stylesheet" type="text/css" />

</head>

<body>
<script src="../js/jquery-1.11.3.min.js" type="text/javascript"></script>
<script>

    function login() {

        $.ajax({
            url:"authorized",
            type: "PUT",
            //data: "name=John&location=Boston",
            dataType:"json",
            success: function(msg){
                //alert(msg);
                //TODO:试用jquery $.parseJSON() 解析
                //alert( $.parseJSON(msg.ih.age));//不起作用
                var data = JSON.parse(msg);
                alert(data.ih.age);
            },
            error:function(){
                alert("connection error....");
            }

        });
    }
</script>
<div id="login">
    <div id="login_header">
        <h1 class="login_logo">
            <a href="http://demo.dwzjs.com"><img src="../themes/default/images/login_logo.gif" /></a>
        </h1>
        <div class="login_headerContent">
            <div class="navList">
                <ul>
                    <li><a href="#">设为首页{{name}}</a></li>
                </ul>
            </div>
            <h2 class="login_title"><img src="../themes/default/images/login_title.png" /></h2>
        </div>
    </div>
    <div id="login_content">
        <div class="loginForm">
            <form>
                <p>
                    <label for = "username">用户名：</label>
                    <input type="text" name="username" size="20" class="login_input" id = "username" />
                </p>
                <p>
                    <label for="pw">密码：</label>
                    <input type="password" name="password" size="20" class="login_input" id="pw"/>
                </p>
                <p>
                    <label for="code">验证码：</label>
                    <input class="code" type="text" size="5" id ="code"/>
                    <span><img src="../img/large.png" alt="" width="80" height="24" /></span>
                </p>
                <div class="login_bar">
                    <!--<input class="sub" type="submit"  value=""/>-->
                    <input type="button" value="登录" onclick="login()">
                </div>
            </form>
        </div>
        <div class="login_banner"><img src="../themes/default/images/login_banner.jpg" /></div>

        <div class="login_main">
            <ul class="helpList">
                <li><a href="#">下载驱动程序</a></li>
                <li><a href="#">如何安装密钥驱动程序？</a></li>
                <li><a href="#">忘记密码怎么办？</a></li>
                <li><a href="demo_page1">为什么登录失败？</a></li>
            </ul>
        </div>
    </div>
    <!--<div id="login_footer">-->
        <!--Copyright &copy; 2009 www.dwzjs.com Inc. All Rights Reserved.-->
    <!--</div>-->

    {{> footer}}
</div>

</body>
</html>